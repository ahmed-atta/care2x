<attach event="onmouseover" handler="over" />
<attach event="onmouseout" handler="out" />
<script type="text/javascript">
function over(){
    if(element.lastChild.tagName=='UL') element.lastChild.style.display='block';
}
function out(){
    if(element.lastChild.tagName=='UL') element.lastChild.style.display='none';
}
</script>