    <dir name="Segments" role="php">
     <file>MSH.php</file>
    </dir>
    <dir name="docs" role="doc">
     <file>README</file>
     <dir name="examples" role="doc">
     </dir>
    </dir>
   </dir>
  </filelist>
 </release>
</package>
