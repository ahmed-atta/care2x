<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<REPORT>
	<TITLE>Sales Report</TITLE>
   <BACKGROUND_COLOR>#FFFFFF</BACKGROUND_COLOR>
   <CSS>phpreports.css</CSS>
   <PAGE BORDER="1" SIZE="25" CELLSPACING="0" CELLPADDING="5" WIDTH="500">
      <HEADER>
         <ROW>
            <COL COLSPAN="5" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD">John Doe Enterprises</COL>
         </ROW>
         <ROW>
            <COL COLSPAN="5" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD">Sales Report</COL>
         </ROW>
      </HEADER>		
      <FOOTER>
         <ROW>
            <COL ALIGN="RIGHT" COLSPAN="4" CELLCLASS="PAGE_LAYER">page total</COL>
            <COL ALIGN="LEFT" NUMBERFORMATEX="2" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD" TYPE="EXPRESSION">$this->getSum("inv_it_total")</COL>
         </ROW>
      </FOOTER>		
   </PAGE>
	<GROUPS>
      <GROUP NAME="citygroup" EXPRESSION="inv_id">
         <HEADER>
            <ROW>
               <COL CELLCLASS="GROUP_LAYER">city:</COL>
               <COL CELLCLASS="GROUP_LAYER" TEXTCLASS="BOLD" TYPE="EXPRESSION" COLSPAN="3">$header->getValue("inv_id")</COL>
            </ROW>
            <ROW>
					<COL CELLCLASS="GROUP_LAYER">inv_id</COL>
					<COL  CELLCLASS="GROUP_LAYER">c_name</COL>
					<COL  CELLCLASS="GROUP_LAYER">name</COL>
					<COL  CELLCLASS="GROUP_LAYER">inv_it_total</COL>
            </ROW>
         </HEADER>
         <FOOTER>
            <ROW>
               <COL ALIGN="RIGHT" COLSPAN="3" CELLCLASS="GROUP_LAYER">total</COL>
               <COL ALIGN="LEFT" CELLCLASS="GROUP_LAYER" TEXTCLASS="BOLD" NUMBERFORMATEX="2" TYPE="EXPRESSION">$this->getSum("inv_it_total")</COL>
            </ROW>
         </FOOTER>


			<FIELDS>
				<ROW>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">inv_id</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">c_name</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">name</COL>
					<COL TYPE="FIELD" CELLCLASS="GROUP_LAYER">inv_it_total</COL>
				</ROW>
			</FIELDS>
		</GROUP>
	</GROUPS>
</REPORT>

